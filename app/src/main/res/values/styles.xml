<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    
<!-- all screens parent layout -->
    <style name="customParentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/laird_background</item>          
        <item name="android:paddingBottom">@dimen/activity_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/activity_vertical_padding</item>
    </style>
    
    
    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/labelTv_textSize</item>          
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/valueTv_textSize</item>          
        <item name="android:textColor">#000000</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_textSize</item>          
        <item name="android:textColor">#000000</item>
    </style>

    <style name="containerLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>          
    </style>
    
    
    
	<!-- typeface -->
	<style name="RobotoTextViewStyle" parent="android:Widget.TextView">
	    <item name="android:typeface">sans</item>
	</style>
	
	<style name="RobotoButtonStyle" parent="android:Widget.Holo.Light.Button">
	    <item name="android:typeface">sans</item>
	</style>
	
    <!-- actionbar color -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#00a0df</item>
    </style>
    
</resources>
